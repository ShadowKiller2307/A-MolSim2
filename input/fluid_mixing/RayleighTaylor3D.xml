<?xml version="1.0"?>
<!-- just a sanity check: body collision rewritten to xml -->
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="../simulation_schema.xsd">

    <settings>
        <delta_t>0.0005</delta_t>
        <end_time>100</end_time>
        <third_dimension>true</third_dimension>
        <particle_container>
            <linkedcells_container>
                <domain_size>
                    <x>60</x>
                    <y>60</y>
                    <z>60</z>
                </domain_size>
                <cutoff_radius>3.6</cutoff_radius>
                <boundary_conditions>
                    <left>Periodic</left>
                    <right>Periodic</right>
                    <bottom>Reflective</bottom>
                    <top>Reflective</top>
                    <back>Periodic</back>
                    <front>Periodic</front>
                </boundary_conditions>
            </linkedcells_container>
        </particle_container>
        <forces>
            <LennardJones />
            <GlobalDownwardsGravity g="12.44" />
        </forces>
        <interceptors>
            <Thermostat application_interval="1000" target_temperature="40"
                        max_temperature_change="INF" />
            <FrameWriter output_format="vtu" fps="24" video_length_s="30" />
        </interceptors>
    </settings>


    <particle_source>
        <cuboid_spawner>
            <lower_left_front_corner>
                <x>0.6</x>
                <y>0.6</y>
                <z>0.6</z>
            </lower_left_front_corner>
            <grid_dim>
                <x>50</x>
                <y>20</y>
                <z>50</z>
            </grid_dim>
            <is_membrane>false</is_membrane>
            <grid_spacing>1.2</grid_spacing>
            <temperature>40</temperature>
            <mass>1.0</mass>
            <velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </velocity>
            <type>0</type>
            <epsilon>1.0</epsilon>
            <sigma>1.2</sigma>
        </cuboid_spawner>

        <cuboid_spawner>
            <lower_left_front_corner>
                <x>0.6</x>
                <y>24.6</y>
                <z>0.6</z>
            </lower_left_front_corner>
            <grid_dim>
                <x>50</x>
                <y>20</y>
                <z>50</z>
            </grid_dim>
            <is_membrane>false</is_membrane>
            <grid_spacing>1.2</grid_spacing>
            <temperature>40</temperature>
            <mass>2.0</mass>
            <velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </velocity>
            <type>2</type>
            <epsilon>1.0</epsilon>
            <sigma>1.1</sigma>
        </cuboid_spawner>

    </particle_source>

</configuration>
